<% admin_layout "full-width" %>
<% admin_breadcrumb(Spree.t(:settings)) %>
<% admin_breadcrumb(Spree.t(:general_settings)) %>
 <%= form_tag("instagram_settings/update", method: "get") do %>
<%= label_tag(:enabled, "Enable") %>
<%= check_box_tag(:enabled, value = true, checked = false, options = {}) %><br>
<%= label_tag(:client_id, "Client ID") %><br>
<%= text_field_tag(:client_id) %><br>
<%= label_tag(:token, "Token") %><br>
<%= text_field_tag(:token) %><br>
<%= label_tag(:number, "Number of Pictures") %><br>
<%= text_field_tag(:number) %><br><br>
    <%= submit_tag("Update Settings") %><br><br>
  <% end %>
<% x = 0
   instagram_pictures = YAML.load(File.read("../solidus_instagram/lib/instagram.yml"))["number"].to_i
   while x < instagram_pictures%>
  <% if File.file?("instagram#{x}.jpg") %>
    <%= image_tag "instagram#{x}.jpg", :style=>"height: 200px; width:200px; margin-top:3px;";%>
  <% else %>
    <%= image_tag "instagram-default.jpg", :style=>"height: 200px; width:200px";%>
  <% end %>
  <% x += 1 %>
<% end %>
<br><br>
  <%= button_to 'Apply Settings', "/admin/instagram_setting/button", method: :get %><br>


